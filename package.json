{
  "name": "wishlist",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "mocked": "ng serve --proxy-config ./proxy.config.json & nodemon mock-server.js",
    "build": "ng build",
    "prod": "ng build --prod",
    "docker-build": "eval $(minikube docker-env); docker build -t frontend:latest .",
    "kube-apply": "kubectl apply -n prod -f kubernetes/frontend.yml",
    "kube-delete": "kubectl delete -n prod -f kubernetes/frontend.yml",
    "kube-deploy": "npm run prod && npm run docker-build && npm run kube-apply",
    "kube-delete-deploy": "npm run kube-delete && npm run kube-deploy",
    "test": "ng test",
    "test-headless": "ng test --browsers ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e --proxy-config proxy.config.json",
    "e2e-headless": "ng e2e --config e2e/config/protractor.e2e.headless.conf.js --proxy-config proxy.config.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.1",
    "@angular/cdk": "2.0.0-beta.11",
    "@angular/common": "^4.3.1",
    "@angular/compiler": "^4.3.1",
    "@angular/core": "^4.3.1",
    "@angular/forms": "^4.3.1",
    "@angular/http": "^4.3.1",
    "@angular/material": "2.0.0-beta.11",
    "@angular/platform-browser": "^4.3.1",
    "@angular/platform-browser-dynamic": "^4.3.1",
    "@angular/router": "^4.3.1",
    "@ngrx/effects": "^4.0.5",
    "@ngrx/router-store": "^4.0.4",
    "@ngrx/store": "^4.1.0",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "ngrx-store-localstorage": "^0.2.2",
    "rxjs": "^5.4.3",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.3.1",
    "@ngrx/store-devtools": "^4.0.0",
    "ngrx-store-logger": "^0.2.0",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "7.1.0",
    "@types/cucumber": "^2.0.3",
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "2.5.53",
    "@types/node": "~8.0.14",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codelyzer": "~3.1.2",
    "cucumber": "2.3.1",
    "cucumber-html-reporter": "2.0.3",
    "fs-extra": "^4.0.1",
    "jasmine-core": "~2.6.4",
    "jasmine-spec-reporter": "~4.1.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-htmlfile-reporter": "~0.3",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-junit-reporter": "^1.2.0",
    "ng-apimock": "^1.4.1",
    "ngrx-store-freeze": "^0.1.6",
    "nodemon": "^1.12.1",
    "protractor": "^5.1.2",
    "protractor-cucumber-framework": "^4.0.4",
    "ts-node": "~3.2.1",
    "tslint": "~5.5.0",
    "typescript": "~2.4.2"
  }
}
